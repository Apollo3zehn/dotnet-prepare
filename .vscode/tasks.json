{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/dotnet-prepare.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "install",
            "command": "dotnet pack -c Release; dotnet tool update -g dotnet-prepare",
            "type": "shell",
            "problemMatcher": []
        }
    ]
}